{
  "restApiRoot": "/api",
  "host": "0.0.0.0",
  "port": 3000,
  "remoting": {
    "context": false,
    "rest": {
      "handleErrors": false,
      "normalizeHttpPath": false,
      "xml": false
    },
    "json": {
      "strict": false,
      "limit": "100kb"
    },
    "urlencoded": {
      "extended": true,
      "limit": "100kb"
    },
    "cors": false
  },
  "tvt-login": {
    "provider": "tvt",
    "module": "passport-oauth2",
    "authorizationURL": "https://www.tvtime.com/oauth/authorize",
    "tokenURL": "https://api.tvshowtime.com/v1/oauth/access_token",
    "callbackURL": "http://localhost:3000/auth/tvt/callback",
    "authPath": "/auth/tvt",
    "callbackPath": "/auth/tvt/callback",
    "successRedirect": "/"
  }
}
